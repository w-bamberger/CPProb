import python ;

if ! [ python.configured ]
{
    ECHO "notice: no Python configured in user-config.jam" ;
    ECHO "notice: will use default configuration" ;
}

using python ;

# Set up the project-wide requirements that everything uses the
# boost_python library.
project
  : requirements <library>/usr/lib/libboost_python.so
  <library>/usr/local/lib/libcpprob.so.1 ;

# Declare the three extension modules.  You can specify multiple
# source files after the colon separated by spaces.
python-extension _proby : _proby.cpp : <toolset>gcc:<cxxflags>-std=c++0x ;

# Put the extension and Boost.Python DLL in the current directory, so
# that running script by hand works.
install convenient_copy 
  : _proby
  : <install-type>SHARED_LIB <install-type>PYTHON_EXTENSION 
    <location>./proby
  ;

# A little "rule" (function) to clean up the syntax of declaring tests
# of these extension modules.
local rule run-test ( test-name : sources + )
{
    import testing ;
    testing.make-test run-pyd : $(sources) : : $(test-name) ;
}

# Declare test targets
#run-test AlarmTest : _proby AlarmTest.py ;


